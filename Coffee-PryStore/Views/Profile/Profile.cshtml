@model User

@{
    ViewData["Title"] = "User Profile";
}

<h1>User Profile</h1>
<p>Email: @Model.Email</p>
<p>Role: @Model.Role</p>

<a asp-action="Edit" asp-route-id="@Model.Id">Edit Profile</a>
<form method="post" asp-action="Delete" asp-route-id="@Model.Id">
    <button type="submit">Delete Account</button>
</form>
