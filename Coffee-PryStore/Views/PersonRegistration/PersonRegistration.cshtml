@{
    Layout = "~/Views/Shared/Settings.cshtml";
    ViewData["Title"] = "Registration";
}
@{
    var currentLanguage = ViewData["CurrentLanguage"]?.ToString();
}

<!DOCTYPE html>
<html lang="@currentLanguage">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link href="~/libraries/boost/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
            overflow: hidden;
        }

        .background-image {
            background-image: url('@Url.Content("~/Attributes/Images/themephotocoffee.png")');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
        }

        .content {
            position: relative;
            z-index: 1;
            padding: 40px;
            background-color: rgba(250, 245, 235, 0.95); 
            border-radius: 15px;
            max-width: 800px;
            margin: 100px auto;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            max-height: calc(100vh - 100px);
        }

        .navbar {
            position: fixed;
            z-index: 1000;
            top: 0;
            left: 0;
            width: 100%;
            height: 60px;
            background-color: rgba(75, 46, 32, 0.9); 
            padding: 0 20px;
        }

        .navbar-brand {
            color: #fff;
            font-weight: bold;
            text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.9);
        }

            .navbar-brand:hover {
                color: #fff;
                text-decoration: none;
            }

        .form-label {
            font-weight: bold;
            color: #4b2e20; 
        }

        .form-control {
            padding: 15px;
            background-color: #f5ebe0;
        }

        .form-check-label {
            margin-left: 8px;
            color: #4b2e20; 
        }

        .btn {
            padding: 12px;
            font-size: 18px;
        }

        .btn-danger {
            background-color: #b85c38; 
            border-color: #b85c38;
        }

            .btn-danger:hover {
                background-color: #a14927; 
                border-color: #a14927;
            }

        h1.custom-title {
            color: #4b2e20; 
        }

        .img-container {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .img-fluid {
            max-width: 80%;
            border-radius: 10px;
            border: 5px solid #b85c38; 
        }
    </style>

</head>
<body>
    <nav class="navbar navbar-expand-sm">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Coffee_PryStore</a>
        </div>

        <ul class="navbar-nav">
            <li><a asp-controller="PersonRegistration" asp-action="ChangeLanguage" asp-route-culture="en-US" class="nav-link"><i class="flag-icon flag-icon-us"></i> English</a></li>
            <li><a asp-controller="PersonRegistration" asp-action="ChangeLanguage" asp-route-culture="uk-UA" class="nav-link"><i class="flag-icon flag-icon-ua"></i> Українська</a></li>
        </ul>

    </nav>
    <div class="background-image"></div>
    <div class="content">
        <div class="row">
            <div class="col-md-6 img-container">
                <img src="@Url.Content("~/Attributes/Images/girlcoffee.png")" class="img-fluid" alt="Coffee Image" />
            </div>
            <div class="col-md-6">
                <h1 class="custom-title">
                    @if (currentLanguage == "en-US")
                    {
                        @:Join
                    }
                    else if (currentLanguage == "uk-UA")
                    {
                        @:Приєднатись
                    }
                </h1>
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @Html.ValidationSummary()
                    </div>
                }
                <form method="post">
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">
                            @if (currentLanguage == "en-US")
                            {
                                <text>E-mail address</text>
                            }
                            else if (currentLanguage == "uk-UA")
                            {
                                <text>Електронна адреса</text>
                            }
                        </label>
                        <input type="email" class="form-control" id="exampleInputEmail1" name="email" placeholder="Enter your email" required>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">
                            @if (currentLanguage == "en-US")
                            {
                                <text>Password</text>
                            }
                            else if (currentLanguage == "uk-UA")
                            {
                                <text>Пароль</text>
                            }
                        </label>
                        <input type="password" class="form-control" id="exampleInputPassword1" name="password" placeholder="Enter your password" required minlength="8">
                    </div>
                    <div class="mb-3 d-grid">
                        <button type="submit" class="btn btn-danger btn-block">
                            @if (currentLanguage == "en-US")
                            {
                                <text>Registration / Login</text>
                            }
                            else if (currentLanguage == "uk-UA")
                            {
                                <text>Зареєструватись / Увійти</text>
                            }
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</body>
</html>
