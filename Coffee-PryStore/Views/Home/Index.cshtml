@model List<Coffee_PryStore.Models.Table>

@{
    ViewData["Title"] = "Товари";
}

@if (ViewBag.UserEmail != null)
{
    <p>Ви увійшли як: @ViewBag.UserEmail (@ViewBag.UserRole)</p>
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>

<style>
    body {
        display: flex;
        flex-direction: column;
        background-image: url('/Attributes/Images/cloudfone.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    main {
        flex: 1;
        background-color: rgba(255, 255, 255, 0.8);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    footer {
        flex-shrink: 0;
    }
</style>

<form method="get">
    <div class="row align-items-center">
        <div class="col-md-3">
            <label for="searchName">Назва:</label>
            <input type="text" name="searchName" class="form-control" value="@ViewData["searchName"]" />
        </div>
        <div class="col-md-3">
            <label for="searchCategory">Категорія:</label>
            <select name="searchCategory" class="form-control">
                <option value="">Всі категорії</option>
                <option value="Арабіка">Арабіка</option>
                <option value="Робуста">Робуста</option>
                <option value="Мелена кава">Мелена кава</option>
            </select>
        </div>
        <div class="col-md-3">
            <label for="sortOrder">Сортувати за:</label>
            <select name="sortOrder" class="form-control">
                <option value="price_asc">Зростання ціни</option>
                <option value="price_desc">Спадання ціни</option>
                <option value="name_asc">За алфавітом (A-Z)</option>
                <option value="name_desc">За алфавітом (Z-A)</option>
            </select>
        </div>
        <div class="col-md-3 text-end">
            <button type="submit" class="btn btn-outline-primary" style="width: 40px; height: 40px;" title="Фільтр">
                <i class="fas fa-filter"></i> 
            </button>
        </div>
    </div>
</form>

<hr />

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@(item.ImageData != null ? $"data:image/jpeg;base64,{Convert.ToBase64String(item.ImageData)}" : "/Attributes/Images/placeholder.png")" class="card-img-top" alt="@item.CofName" />
                <div class="card-body">
                    <h5 class="card-title">@item.CofName</h5>
                    <p class="card-text"><strong>Категорія:</strong> @item.CofCateg</p>
                    <p class="card-text"><strong>Ціна:</strong> @item.CofPrice грн</p>
                    <p class="card-text"><strong>Кількість:</strong> @item.CofAmount</p>
                    <p class="card-text"><strong>Термін зберігання:</strong> @item.CofDuration.ToString("yyyy-MM-dd")</p>
                    <form asp-controller="Basket" asp-action="AddToCart" method="post" class="mt-auto">
                        <input type="hidden" name="productId" value="@item.CofId" />
                        <input type="hidden" name="quantity" value="1" />
                        <button type="submit" class="btn btn-primary w-100">Додати до кошика</button>
                    </form>

                </div>
            </div>
        </div>
    }
</div>
