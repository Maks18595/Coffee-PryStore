@model IEnumerable<Coffee_PryStore.Models.Order>

@{
    ViewData["Title"] = "Orders Management";
}

<h2>Orders Management</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User ID</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.UserId</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>@order.TotalAmount</td>
                <td>@order.Status</td>
                <td>
                    <a asp-action="OrderDetails" asp-route-id="@order.OrderId" class="btn btn-info">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
