@model Coffee_PryStore.Models.User

@{
    var currentLanguage = ViewData["CurrentLanguage"]?.ToString();
}

<h1 class="text-center mt-4">
    @if (currentLanguage == "en-US")
    {
        <text>Edit User</text>
    }
    else if (currentLanguage == "uk-UA")
    {
        <text>Редагування користувача</text>
    }
</h1>

<div class="card shadow-sm mt-4 mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">
                    @if (currentLanguage == "en-US")
                    {
                        <text>Email</text>
                    }
                    else if (currentLanguage == "uk-UA")
                    {
                        <text>Електронна пошта</text>
                    }
                </label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">
                    @if (currentLanguage == "en-US")
                    {
                        <text>Password</text>
                    }
                    else if (currentLanguage == "uk-UA")
                    {
                        <text>Пароль</text>
                    }
                </label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Role" class="form-label">
                    @if (currentLanguage == "en-US")
                    {
                        <text>Role</text>
                    }
                    else if (currentLanguage == "uk-UA")
                    {
                        <text>Роль</text>
                    }
                </label>
                <select asp-for="Role" class="form-control">
                    <option value="">
                        @if (currentLanguage == "en-US")
                        {
                            <text>Select Role</text>
                        }
                        else if (currentLanguage == "uk-UA")
                        {
                            <text>Виберіть роль</text>
                        }
                    </option>
                    <option value="User">
                        @if (currentLanguage == "en-US")
                        {
                            <text>User</text>
                        }
                        else if (currentLanguage == "uk-UA")
                        {
                            <text>Користувач</text>
                        }
                    </option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">
                @if (currentLanguage == "en-US")
                {
                    <text>Save Changes</text>
                }
                else if (currentLanguage == "uk-UA")
                {
                    <text>Зберегти зміни</text>
                }
            </button>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a href="@Url.Action("AdminDashboard", "Admin")" class="btn btn-secondary">
        @if (currentLanguage == "en-US")
        {
            <text>Back to Dashboard</text>
        }
        else if (currentLanguage == "uk-UA")
        {
            <text>Повернутись до панелі</text>
        }
    </a>
</div>
