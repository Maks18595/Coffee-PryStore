@model User

@{
    ViewData["Title"] = "Профіль адміністратора";
}

<h1>Профіль адміністратора</h1>
<p>Електронна адреса: @Model.Email</p>
<p>Роль: @Model.Role</p>
<table class="table">
    <thead>
        <tr>
            <th>Електронна адреса</th>
            <th>Роль</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Email</td>
            <td>@Model.Role</td>
            <td>
                <form method="post" asp-action="Delete" asp-route-id="@Model.Id" class="d-inline-block">
                    <button class="btn btn-danger btn-sm" type="submit" aria-label="Видалити">Видалити</button>
                </form>
                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@Model.Id" aria-label="Редагувати">Редагувати</a>
                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@Model.Id" aria-label="Деталі">Деталі</a>
            </td>
        </tr>
    </tbody>
</table>

<div class="mt-4">
    <h3>Ваші замовлення</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Номер замовлення</th>
                <th>Дата</th>
                <th>Сума</th>
                <th>Статус</th>
            </tr>
        </thead>
        <tbody>
            @* Логіка для відображення замовлень користувача *@
        </tbody>
    </table>
</div>
