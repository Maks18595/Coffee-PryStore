@model Coffee_PryStore.Models.User

@{
    var currentLanguage = ViewData["CurrentLanguage"]?.ToString();
}

<h1 class="text-center mt-4">@if (currentLanguage == "en-US")
    {
        <text>User Details</text>
    }
    else if (currentLanguage == "uk-UA")
    {
        <text>Деталі користувача</text>
    }</h1>

<div class="card shadow-sm mt-4 mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4 fw-bold">
                @if (currentLanguage == "en-US")
                {
                    <text>Email:</text>
                }
                else if (currentLanguage == "uk-UA")
                {
                    <text>Електронна пошта:</text>
                }
            </dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4 fw-bold">
                @if (currentLanguage == "en-US")
                {
                    <text>Role:</text>
                }
                else if (currentLanguage == "uk-UA")
                {
                    <text>Роль:</text>
                }
            </dt>
            <dd class="col-sm-8">@Model.Role</dd>
        </dl>

    </div>
</div>

<h2 class="mt-4">
    @if (currentLanguage == "en-US")
    {
        <text>Order History</text>
    }
    else if (currentLanguage == "uk-UA")
    {
        <text>Історія замовлень</text>
    }
</h2>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>@if (currentLanguage == "en-US")
                {
                    <text>Date</text>
                }
                else
                {
                    <text>Дата</text>
                }</th>
            <th>@if (currentLanguage == "en-US")
                {
                    <text>Total Amount</text>
                }
                else
                {
                    <text>Загальна сума</text>
                }</th>
            <th>@if (currentLanguage == "en-US")
                {
                    <text>Status</text>
                }
                else
                {
                    <text>Статус</text>
                }</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>@order.TotalAmount</td>
                <td>@order.Status</td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center mt-4">
    <a href="@Url.Action("AdminDashboard", "Admin")" class="btn btn-secondary">
        @if (currentLanguage == "en-US")
        {
            <text>Back to Dashboard</text>
        }
        else if (currentLanguage == "uk-UA")
        {
            <text>Повернутись до панелі</text>
        }
    </a>
</div>