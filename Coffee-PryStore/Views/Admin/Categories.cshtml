@{
    ViewData["Title"] = "Products";
}

<div class="container-fluid">
    <h2>Products Page</h2>
    <p>Here you can manage your products.</p>
    <div class="row">
        <div>
            <div class="col-md-4">
            </div>
            <div class="col-md-8">
                <br />
                <img src="~/Attributes/Images/menu.png" />
                <h4 class="text-danger">
                    Manage Catagories
                </h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <h2 class="text-danger">Categories Details</h2>
            <div class="mb-3">
                <label for="categoryName" class="form-label">Category Name</label>
                <input type="text" class="form-control" id="categoryName" name="categoryName">
            </div>
            <div class="mb-3">
                <label for="categoryInfo" class="form-label">Category Information</label>
                <input type="text" class="form-control" id="categoryInfo" name="categoryInfo">
            </div>
            <br />  <br />  <br />
            <button type="submit" class="btn btn-primary">Edit</button>
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-primary">Delete</button>
        </div>
       
    </div>
</div>