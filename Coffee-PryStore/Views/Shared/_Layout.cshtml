<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Coffee PryStore - Your online coffee shop" />
    <meta name="keywords" content="coffee, shop, online, e-commerce" />
    <title>@ViewData["Title"] - Coffee PryStore</title>
    <link rel="icon" type="image/png" href="@Url.Content("~/Attributes/Images/signview.png")">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Coffee_PryStore.styles.css" asp-append-version="true" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1;
        }

        footer {
            background-color: #343a40;
            color: white;
            text-align: center;
            padding: 1rem 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Coffee PryStore</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Basket" asp-action="Basket">Кошик</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="History" asp-action="History">Інформація про каву</a>
                        </li>

                        <li class="nav-item">
                            <a href="@Url.Action("ChangeLanguage", "Home", new { culture = "uk" })">Українська</a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("ChangeLanguage", "Home", new { culture = "en" })">English</a>
                        </li>


                        <!--  
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Index">Товари</a>
                        </li>
                        -->

                        @if (Context.Session.GetInt32("UserId") != null)
                        {
                            var userRole = Context.Session.GetString("UserRole");
                            var userEmail = Context.Session.GetString("UserEmail");

                        
                            if (userRole == "Admin" || userEmail == "pryimak@gmail.com")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="AdminDashboard">Панель адміністратора</a>
                                </li>
                            }
                           
                            else if (userRole == "User")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="User" asp-action="UserDashboard">Панель</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="User" asp-action="UserProfile" asp-route-id="@Context.Session.GetInt32("UserId")">Профіль</a>
                                </li>
                            }

                   
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="PersonRegistration" asp-action="Logout">Вихід</a>
                            </li>
                        }
                        else
                        {

                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("PersonRegistration", "PersonRegistration")">Вхід/Реєстрація</a>
                            </li>
                        }
                    </ul>

                    <form class="d-flex" asp-controller="Search" asp-action="Index" method="get">
                        <input class="form-control me-2" type="search" name="searchTerm" placeholder="Пошук товарів" aria-label="Пошук" />
                        <button class="btn btn-outline-light" type="submit">Пошук</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            &copy; 2024 - Coffee PryStore
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
